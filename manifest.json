{

    "manifest_version": 2,
    "name": "Fancy Clipboard - Copy Text With CSS",
    "version": "1.0.1",
  
    "description": "Enables support for custom clipboard functionality",
  
    "icons": {
      "48": "icons/clipboard-48.png"
    },
  
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }],
    "permissions": ["clipboardWrite", "<all_urls>","activeTab"]

    

    
    
  }
  